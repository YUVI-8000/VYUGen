<% layout("./layout/boilerplate") %>
<br>

<div class="container-fluid min-vh-50 d-flex flex-column p-0">
  <div class="row flex-grow-1 no-gutters">
    <!-- Outer Column - Hidden on Small Screens -->
    <div class="col-lg-3 d-none d-lg-flex align-items-center justify-content-center p-3">
     
    </div>

    <!-- Center Column - Always Visible -->
    <div class="col-lg-6 d-flex justify-content-center text-center">
      <div>
        <h1>SELECT YOUR BRANCH</h1>
          
        <% for(let b of branch){ %>
          <div class="box">
            <a href="/<%= cr %>/<%= b %>" class="fill-div"><h2><%= b %></h2></a>        
          </div>
        <% } %>
      </div>
    </div>

    <!-- Outer Column - Hidden on Small Screens -->
    <div class="col-lg-3 d-none d-lg-flex align-items-center justify-content-center p-3">

    </div>
  </div>
</div>
