    <!-- JavaScript for ML Search -->
    <script>
      function searchWithML(event) {
        event.preventDefault(); // Prevent the form from submitting

        const queryInput = document.getElementById("search-bar");
        if (!queryInput) {
          console.error("Search bar input not found!");
          return;
        }

        const query = queryInput.value;
        if (!query) {
          console.warn("No query entered.");
          alert("Please enter a search term!");
          return;
        }

        console.log("Navigating to ML search with query:", query);
        // Navigate to the ML search results page with the query
        window.location.href = `/ml-search?query=${encodeURIComponent(query)}`;
      }
    </script>
    
